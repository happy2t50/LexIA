# Variables de entorno globales para LexIA 2.0

# JWT Secret para autenticación
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# OpenAI API Key (opcional, para servicio de explicación)
OPENAI_API_KEY=sk-your-openai-api-key-here

# URLs de microservicios (para desarrollo local)
OLAP_SERVICE_URL=http://localhost:3001
CLUSTERING_SERVICE_URL=http://localhost:3002
AUTH_SERVICE_URL=http://localhost:3003
NLP_SERVICE_URL=http://localhost:3004
SEARCH_SERVICE_URL=http://localhost:3005
RECOMMENDATIONS_SERVICE_URL=http://localhost:3006
EXPLANATION_SERVICE_URL=http://localhost:3007
GEO_ASSISTANCE_SERVICE_URL=http://localhost:3008

# Base de datos (para producción)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=lexia_db
DB_USER=postgres
DB_PASSWORD=your-db-password

# Redis (para cache en producción)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# Configuración general
NODE_ENV=development
LOG_LEVEL=debug
